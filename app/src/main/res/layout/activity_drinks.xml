<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context=".sides">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/drinksTV"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="               Drinks"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        app:fontFamily="@font/coiny" />

    <TextView
        android:id="@+id/sodaTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Soda                                          $2.00"
        android:textSize="24sp"
        app:fontFamily="@font/coiny" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cocacolaButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Coca Cola"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/pepsiButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Pepsi"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/mountaindewButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Mountain Dew"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/spriteButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Sprite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/fantaButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Fanta"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/JuiceTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Juice                                         $3.00"
        android:textSize="24sp"
        app:fontFamily="@font/coiny" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="110dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/applejButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Apple"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cranberryjButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Cranberry"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/lemonadeButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Lemonade"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/pineapplejButton"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Pineapple"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/orangejButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/common_google_signin_btn_text_dark_default"
                android:text="Orange"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/fruitsmoothieTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Fruit Smoothie                       $5.50"
        android:textSize="24sp"
        app:fontFamily="@font/coiny" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_google_signin_btn_text_dark_default">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/baseTV"
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:text="BASE:"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fruitsTV"
                android:layout_width="204dp"
                android:layout_height="match_parent"
                android:text="FRUITS:"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="205dp"
            android:layout_height="match_parent" >

            <RadioButton
                android:id="@+id/greekyogurtButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Greek Yogurt" />

            <RadioButton
                android:id="@+id/wholemilkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Whole Milk" />

            <RadioButton
                android:id="@+id/almondMilkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Almond Milk" />

            <RadioButton
                android:id="@+id/soymilkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Soy Milk" />

            <RadioButton
                android:id="@+id/coconutmilkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coconut Milk" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/appleButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Apple" />

            <CheckBox
                android:id="@+id/bananaButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Banana" />

            <CheckBox
                android:id="@+id/orangeButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Orange" />

            <CheckBox
                android:id="@+id/strawberriesButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Strawberries" />

            <CheckBox
                android:id="@+id/blueberriesButton"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Blueberries" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addDrinksButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Add Item(s)"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
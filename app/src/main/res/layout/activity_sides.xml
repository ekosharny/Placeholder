<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    android:orientation="vertical"
    tools:context=".sides">
    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/sidesTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="                    Sides"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        app:fontFamily="@font/coiny" />

    <TextView
        android:id="@+id/chipsTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chips      (280 cal)                  $2.00"
        android:textSize="24sp"
        app:fontFamily="@font/coiny" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/potatochipsButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/potatochips"
                android:text="Potato"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/sourcreamButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sourcreamandonion"
                android:text="Sour Cream"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cheddarButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cheddarchips"
                android:text="Cheddar"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/bbqButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bbqchips"
                android:text="BBQ"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/popcornButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/popcorn"
                android:text="Popcorn"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/breadTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Bread      (160 cal)                  $1.50"
        android:textSize="24sp"
        app:fontFamily="@font/coiny" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/whitebreadButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/whitebread"
                android:text="White Bread"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/wholewheatButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/wholewheat"
                android:text="Whole Wheat"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/wholegrainButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/wholegrain"
                android:text="Whole Grain"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/sourdoughButton"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/sourdough"
                android:text="Sourdough"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/pitaButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/pita"
                android:text="Pita"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/SoupTV"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Soup      (90 cal)                    $4.50"
        android:textSize="24sp"
        app:fontFamily="@font/coiny" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/frenchonionButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/frenchonionsoup"
                android:text="French Onion"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/clamchowderButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/clamchowder"
                android:text="Clam Chowder"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/veggieButton"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/veggiesoup"
                android:text="Veggie"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/chickennoodleButton"
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chickennoodle"
                android:text="Chicken Noodle"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/addSidesButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Add Item(s)"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>